<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_ready_recode_video_view"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ready_record_video_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/record_video_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_7"
            android:src="@drawable/icon_record_video_start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_12"
            android:gravity="center"
            android:text="@string/start"
            android:textColor="@color/colorffffff" />

        <View
            android:layout_width="@dimen/px_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_7"
            android:background="@color/white_50" />

        <ImageView
            android:id="@+id/record_video_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/icon_record_video_close" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/record_video_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/record_video_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_7"
            android:src="@drawable/icon_record_video_stop" />

        <TextView
            android:id="@+id/recording_time"
            android:layout_width="@dimen/dp_45"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center"
            android:text="@string/init_time"
            android:textColor="@color/colorffffff" />


    </LinearLayout>

</LinearLayout>