<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.example.i_to_sky.functionproject.view.longpic.LongPicView
        android:id="@+id/long_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/generate_progress_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/generate_progress_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_12" />

        <ProgressBar
            android:id="@+id/long_pic_generate_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_3"
            android:progressDrawable="@drawable/bg_generate_long_pic_progress" />

    </LinearLayout>

</FrameLayout>
